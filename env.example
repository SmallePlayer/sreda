# Weather API ключ (получить на https://www.weatherapi.com/)
WEATHER_API_KEY=your_weather_api_key_here

# Путь к модели Vosk (после скачивания модели)
VOSK_MODEL_DIR=models/small_model

# Модель Ollama для LLM
OLLAMA_MODEL=qwen3:0.6b

# Настройки TCP сервера для ESP устройства
TCP_HOST=0.0.0.0
TCP_PORT=12345

# Путь к базе данных SQLite
SQLITE_PATH=device.db
